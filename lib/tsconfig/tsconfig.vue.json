{
  "compilerOptions": {
    "module": "ESNext",

    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    "jsx": "preserve",
    "jsxImportSource": "vue",

    "noImplicitThis": true,
    "strict": true,

    "verbatimModuleSyntax": true,

    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "strictPropertyInitialization": false
  }
}
